        "libs/imperative-handle-tutorial/src/index.ts"
      ],
      "@react-hooks-course/layout-effect-tutorial": [
        "libs/layout-effect-tutorial/src/index.ts"
      ],
      "@react-hooks-course/memo-tutorial": ["libs/memo-tutorial/src/index.ts"],
      "@react-hooks-course/reducer-tutorial": [
        "libs/reducer-tutorial/src/index.ts"
      ],
      "@react-hooks-course/ref-tutorial": ["libs/ref-tutorial/src/index.ts"],
      "@react-hooks-course/state-tutorial": ["libs/state-tutorial/src/index.ts"]
